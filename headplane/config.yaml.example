# Headplane Configuration

# Headscale connection
headscale:
  url: http://headscale:8080
  # API key from environment variable - generate with: docker exec headscale headscale apikeys create
  api_key: "${HEADPLANE_API_KEY}"
  config_strict: false

# Web interface settings
server:
  host: "0.0.0.0"
  port: 3000
  # Cookie secret from environment variable - generate with: openssl rand -base64 24
  cookie_secret: "${HEADPLANE_COOKIE_SECRET}"
  cookie_secure: false  # Set to true only if behind HTTPS reverse proxy

# Authentication (optional)
# Uncomment to enable authentication
# auth:
#   type: basic
#   users:
#     - username: admin
#       password_hash: ""  # bcrypt hash

# Logging
log:
  level: debug
  format: json

# Docker integration (optional)
docker:
  enabled: true
  socket: /var/run/docker.sock
